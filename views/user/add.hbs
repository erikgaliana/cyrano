<!-- CREATE QUOTE -->
<main>
  <div class="private-header">
    <button id="back-arrow"><img src="/images/arrow.png" alt=""></button>
    <h1>Add quote</h1>
  </div>
  <form action='/add' method='POST' class="add-quote">

    <label for=''>Text</label>
    <textarea type='text' name='quote'></textarea>

    <button class="btn-preview">Preview</button>

    <div class="add-quote__preview"></div>

    <button type='submit'>Submit</button>
  </form>
  
  <button id="cancel-btn" class="btn-cancel">Cancel</button>
  
  {{#if errorMessage}}
    <div class="err-message">{{errorMessage}}</div>
  {{/if}}

  {{!-- {{> navbar}} --}}
</main>
