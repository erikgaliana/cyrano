
<main class="profile">
    <div class="private-header">
        <button id="back-arrow"><img src="/images/arrow.svg" alt=""></button>
        <h1>Edit profile</h1>
        <a href="/logout" class="logout-btn"><img src="/images/logout.svg" alt=""></a>
    </div>
    <form action="/edit-profile" method="post" enctype="multipart/form-data">
        <img class="user__img" src="{{user.pictureUrl}}" alt="">
        
        <label for=''>Picture</label>
        <input type='file' name='picture'>

        <label for=''>Username</label>
        <input type='text' name='username' value="{{user.username}}">

        <label for=''>Password</label>
        <input type='password' name='password' value="{{user.password}}">

        <label for=''>Email</label>
        <input type='email' name='email' value="{{user.email}}">
        

        <label for=''>Bio</label>
        <input type='text' name='bio' value="{{user.bio}}">

        <button type='submit'>edit profile</button>
    </form>
    <form action="/edit-profile/delete/{{user._id}}" method="post">
        <button><a>Delete profile</a></button>
    </form>
    {{> navbar}}
</main>