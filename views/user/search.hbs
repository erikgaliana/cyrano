<main>
  <div class="private-header">
    <button id="back-arrow"><img src="/images/arrow.svg" alt=""></button>
    <h1>Search quote</h1>
  </div>
  <form action='/search' method='POST' class="add-quote">
    <label for=''>Text</label>
    <input type='text' name='quote'></input>

    <button type='submit'>Search Quote</button>
  </form>
    
  {{#if errorMessage}}
    <div class="err-message">{{errorMessage}}</div>
  {{/if}}

  {{#each matchQuotes}}
    {{> quoteCard this}}
  {{/each}}

  {{> navbar}}
</main>